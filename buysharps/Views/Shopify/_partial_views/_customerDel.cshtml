@model buysharps.Models.BuysharpsModel.Tables.Customer
@{
    Layout = null;
}
<div class="modal-header">
    <h5 style="color:darkred" class="modal-title">Are you sure you want to delete  this customer?</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <form action="#">
        <div class="form-group row">
            @Html.HiddenFor(model => model.Id)
            <label class="col-sm-4 col-form-label" for="name"> First Name</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "name" } })
            </div>
        </div>
        <div class="form-group row">

            <label class="col-sm-4 col-form-label" for="job"> Last Name</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "job" } })
            </div>
        </div>
        <div class="form-group row">

            <label class="col-sm-4 col-form-label" for="salary"> Email</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "salary" } })
            </div>
        </div>     '
        <div class="form-group row">

            <label class="col-sm-4 col-form-label" for="salary"> Phone </label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "salary" } })
            </div>
        </div>
    </form>

</div>
<div class="modal-footer">
    <button data-dismiss="modal" class="btn btn-outline-dark btn-sm-3">
        <i class="fa fa-close"></i>
        Close
    </button>
    <button id="SendForm" name="CustomerDelete" class="btn btn-outline-danger btn-sm-3">
        <i class="fa fa-trash"></i>
        Delete
    </button>
</div>
