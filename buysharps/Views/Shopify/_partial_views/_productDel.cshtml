@model buysharps.Models.BuysharpsModel.Tables.Product
@{
    Layout = null;
}
<div class="modal-header">
    <h5 style="color:darkred" class="modal-title">Are you sure you want to delete  this product?</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <form action="#">
        <div class="form-group row">
            @Html.HiddenFor(model => model.Id)
            <label class="col-sm-4 col-form-label" for="name"> Title</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "name" } })
            </div>
        </div>
        <div class="form-group row">

            <label class="col-sm-4 col-form-label" for="job"> Description</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.body_html, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "job" } })
            </div>
        </div>
        <div class="form-group row">

            <label class="col-sm-4 col-form-label" for="salary"> Create at</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.created_at, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "salary" } })
            </div>
        </div>       
        <div class="form-group row">

            <label class="col-sm-4 col-form-label" for="salary"> Image</label>
            <div class="col-sm-6">
                <td class=" col-sm">
                    @* -- Convert Html to Paint Text -- *@
                    <img name="Image" src="@Model.Image.Src" class="img-fluid img-thumbnail" alt="...">
                </td>
            </div>
        </div>
    </form>

</div>
<div class="modal-footer">
    <button data-dismiss="modal" class="btn btn-outline-dark btn-sm-3">
        <i class="fa fa-close"></i>
        Close
    </button>
    <button id="SendForm" name="ProductDelete" class="btn btn-outline-danger btn-sm-3">
        <i class="fa fa-trash"></i>
        Delete
    </button>
</div>
